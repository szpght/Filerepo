@using FileRepo.Model
@{
    Layout = "Views/layout.cshtml";
}
<h2>@Model.Subject.Name</h2>
<div class="btn-group">
    <a href="/repo/subject/@Model.Subject.Id/upload" class="btn btn-default">Upload file</a>
    <a href="/repo" class="btn btn-default">Back</a>
</div>
<table class="table" style="vertical-align: middle;">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Opis</th>
            <th>Rozmiar</th>
            <th>Dodany</th>
            <th>Przez</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach(Item item in Model.Items)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.SizeHumanReadable</td>
            <td>@item.DateAdded</td>
            <td><a href="@item.User.FbProfileURL"><img src="@item.User.FbPictureURL" /></a></td>
            <td class="btn-group">
                <a href="/repo/file/@item.Id" class="btn btn-default btn-xs">Szczegóły</a>
            <a href="/repo/file/@item.Id/download/@item.Name" class="btn btn-default btn-xs">Pobierz</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<div class="btn-group">
    <a href="/repo/subject/@Model.Subject.Id/upload" class="btn btn-default">Upload file</a>
    <a href="/repo" class="btn btn-default">Back</a>
</div>
